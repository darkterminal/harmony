{
    "name": "harmony-betta/harmony",
    "description": "The Harmony Framework.",
    "keywords": [
        "framework",
        "harmony",
        "harmony framewrok"
    ],
    "license": "GPL-3.0-only",
    "type": "project",
    "version": "1.0.4",
    "authors": [
        {
            "name": "Imam Ali Mustofa",
            "email": "bettadevindonesia@gmail.com",
            "homepage": "http://www.bettadevindonesia.com",
            "role": "Founder & Developer Betta Dev Indonesia"
        }
    ],
    "require": {
        "php": "^5.5.9|>=7.0.8",
        "slim/slim": "4.4.0",
        "slim/twig-view": "3.0.0-beta",
        "illuminate/database": "^5.5",
        "illuminate/events": "^5.5",
        "illuminate/support": "5.7.*",
        "respect/validation": "^1.1",
        "slim/csrf": "1.0.0",
        "slim/flash": "^0.4.0",
        "symfony/console": "5.0.4",
        "zeuxisoo/slim-whoops": "0.6.*",
        "vlucas/phpdotenv": "4.1.0",
        "davedevelopment/phpmig": "~1",
        "nette/mail": "3.1.0",
        "nesbot/carbon": "^1.22",
        "phpmailer/phpmailer": "~6.0",
        "symfony/filesystem": "5.0.4",
        "league/flysystem": "^1.0",
        "slim/psr7": "^1.0",
        "php-di/php-di": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app",
            "Harmony\\": "system"
        },
        "exclude-from-classmap": [
            "/app/Support/Commands/HelperCommands/Templates/"
        ]
    },
    "config": {
        "bin-dir": "bin/"
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "removeMaster": "rm -rf harmony-master"
    },
    "require-dev": {
        "symfony/var-dumper": "^3.4",
        "symfony/process": "5.0.4"
    }
}
